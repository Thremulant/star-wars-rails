<div class="container mb-4">
  <div class="row">
    <h1 class="display-4 text-warning p-0 col-12">
      <%= @race.name %>
    </h1>
  </div>
  <div class="row">
    <div class="col-md-4 col-sm-12 ">
      <h1 class="display-6 text-warning p-0">Information</h1>
      <p class='text-light mb-1'><strong class='text-warning'>Homeworld: </strong>
        <% if @planet.name == 'Unknown' || @planet.name == 'unknown' %>
          <%= @planet.name.humanize %>
        <%else%>
          <%=link_to @planet.name, @planet%>
        <%end%>
      </p>
      <p class='text-light mb-1'><strong class='text-warning'>Classification: </strong><%=@race.classification.humanize%></p>
      <p class='text-light mb-1'><strong class='text-warning'>Designation: </strong><%=@race.designation.humanize%></p>
      <p class='text-light mb-1'><strong class='text-warning'>Language: </strong><%=@race.language.humanize%></p>
      <p class='text-light mb-1'><strong class='text-warning'>Average lifespan: </strong><%=@race.average_lifespan%></p>
    </div>
    <% if @characters.length > 0 then%>
      <div class="col">
        <h6 class="display-6 text-warning p-0">Characters</h5>
        <ul class="list-group">
          <% @characters.each do |char| %>
            <li class="list-group-item"><%= link_to char.name, char, class:"link-dark" %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
<div class="container">
  <h1 class="display-6 text-warning p-0">Films</h1>
  <div class="row">
    <% @films.each do |film| %>
      <div class="col-md-6 col-lg-4 ">
        <div class="card mb-4" >
          <a href="<%= film_path(film) %>" class="link-dark">
            <img src="<%= film.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= film.title %></h5>
              <%# <h6 class="card-subtitle mb-2 text-muted ">Card subtitle</h6> %>
            </div>
          </a>
        </div>
      </div>
    <% end %>
  </div>
</div>
